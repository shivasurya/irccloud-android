<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/members"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Show members"
            android:textSize="16sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/unread"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Show unread message indicator"
            android:textSize="16sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/readOnSelect"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Mark as read automatically"
            android:textSize="16sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/notifyAll"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Notify on all messages"
            android:textSize="16sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/joinpart"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Show nick changes, joins, and parts"
            android:textSize="16sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/collapse"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Collapse nick changes, joins, and parts"
            android:textSize="16sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/autosuggest"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Suggest nicknames as you type"
            android:textSize="16sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/inlineFiles"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Embed uploaded files"
            android:textSize="16sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/inlineImages"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Embed external media"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>