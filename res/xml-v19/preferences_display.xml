<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:robobunny="http://robobunny.com">

	<PreferenceCategory android:title="Display">
        <Preference
            android:title="Theme"
            android:key="theme"
            />
        <com.cgollner.unclouded.preferences.SwitchPreferenceCompat
            android:key="monospace"
            android:defaultValue="false"
            android:title="Monospace Font"/>
        <com.cgollner.unclouded.preferences.SwitchPreferenceCompat
            android:key="preferSystemEmoji"
            android:defaultValue="true"
            android:title="Prefer Android Emoji Font"/>
        <com.robobunny.SeekBarPreference
            android:key="textSize"
            android:title="Text Size"
            android:defaultValue="@integer/default_text_size"
            android:max="24"
            robobunny:min="12"
            robobunny:unitsLeft=""
            robobunny:unitsRight=""/>
    </PreferenceCategory>

</PreferenceScreen>
